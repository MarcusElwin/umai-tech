---
const features = [
  {
    title: 'GenAI Solutions',
    description: 'Custom language models and AI agents tailored to your business needs.',
    icon: '⚡',
    accent: 'from-purple-500 to-purple-600',
  },
  {
    title: 'Machine Learning',
    description: 'Advanced ML models for prediction, classification, and optimization.',
    icon: '◉',
    accent: 'from-purple-600 to-purple-700',
  },
  {
    title: 'Data Engineering',
    description: 'Scalable data pipelines and infrastructure for AI-driven insights.',
    icon: '◈',
    accent: 'from-purple-500 to-purple-600',
  },
  {
    title: 'Consulting',
    description: 'Expert guidance on AI strategy and implementation roadmaps.',
    icon: '◎',
    accent: 'from-purple-600 to-purple-700',
  },
];
---

<section class="py-24 px-4 sm:px-6 lg:px-8 bg-gray-50 dark:bg-umai-gray-900">
  <div class="max-w-6xl mx-auto">
    <div class="mb-16">
      <h2 class="text-3xl sm:text-4xl font-light text-gray-900 dark:text-white mb-4">
        Our <span class="font-normal text-umai-accent">Expertise</span>
      </h2>
      <p class="text-base text-gray-600 dark:text-gray-400 max-w-2xl">
        Delivering intelligent solutions that drive innovation and growth
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {features.map((feature, index) => (
        <div class="group relative p-8 bg-white dark:bg-umai-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 hover:border-umai-accent/50 dark:hover:border-umai-accent/50 transition-all duration-300">
          <!-- Subtle gradient on hover -->
          <div class="absolute inset-0 bg-gradient-to-br from-umai-accent/0 to-umai-accent/0 group-hover:from-umai-accent/5 group-hover:to-umai-accent/10 rounded-2xl transition-all duration-300"></div>
          
          <div class="relative">
            <div class="mb-4 flex items-center space-x-3">
              <span class={`text-2xl text-umai-accent bg-gradient-to-r ${feature.accent} bg-clip-text text-transparent`}>
                {feature.icon}
              </span>
              <h3 class="text-lg font-medium text-gray-900 dark:text-white">
                {feature.title}
              </h3>
            </div>
            <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">
              {feature.description}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- Call to action -->
    <div class="mt-16 text-center">
      <a href="/services" class="inline-flex items-center text-sm font-medium text-umai-accent hover:text-umai-accent-dark transition-colors group">
        <span>Explore all services</span>
        <svg class="ml-2 w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>