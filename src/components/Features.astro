---
const features = [
  {
    title: 'GenAI Solutions',
    description: 'Custom language models and AI agents tailored to your business needs.',
    icon: 'lightning',
    accent: 'from-purple-500 to-purple-600',
  },
  {
    title: 'Machine Learning',
    description: 'Advanced ML models for prediction, classification, and optimization.',
    icon: 'brain',
    accent: 'from-purple-600 to-purple-700',
  },
  {
    title: 'Data Engineering',
    description: 'Scalable data pipelines and infrastructure for AI-driven insights.',
    icon: 'database',
    accent: 'from-purple-500 to-purple-600',
  },
  {
    title: 'Consulting',
    description: 'Expert guidance on AI strategy and implementation roadmaps.',
    icon: 'consulting',
    accent: 'from-purple-600 to-purple-700',
  },
];

function getIcon(iconName: string) {
  const icons = {
    lightning: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
    </svg>`,
    brain: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
    </svg>`,
    database: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4" />
    </svg>`,
    consulting: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
    </svg>`
  };
  return icons[iconName as keyof typeof icons] || icons.lightning;
}
---

<section class="py-24 px-4 sm:px-6 lg:px-8 bg-umai-gray-50 dark:bg-umai-gray-900">
  <div class="max-w-6xl mx-auto">
    <div class="mb-16">
      <h2 class="text-3xl sm:text-4xl font-light text-gray-900 dark:text-white mb-4">
        Our <span class="font-normal text-umai-accent">Expertise</span>
      </h2>
      <p class="text-base text-umai-gray-600 dark:text-umai-gray-400 max-w-2xl">
        Delivering intelligent solutions that drive innovation and growth
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {features.map((feature) => (
        <div class="group relative p-8 bg-white dark:bg-umai-gray-800 rounded-2xl border border-umai-gray-200 dark:border-umai-gray-700 hover:border-umai-accent/50 dark:hover:border-umai-accent/50 transition-all duration-300">
          <!-- Subtle gradient on hover -->
          <div class="absolute inset-0 bg-gradient-to-br from-umai-accent/0 to-umai-accent/0 group-hover:from-umai-accent/5 group-hover:to-umai-accent/10 rounded-2xl transition-all duration-300"></div>
          
          <div class="relative">
            <div class="mb-4 flex items-center space-x-3">
              <div class={`text-umai-accent bg-gradient-to-r ${feature.accent} bg-clip-text`} set:html={getIcon(feature.icon)} />
              <h3 class="text-lg font-medium text-umai-gray-900 dark:text-white">
                {feature.title}
              </h3>
            </div>
            <p class="text-sm text-umai-gray-600 dark:text-umai-gray-400 leading-relaxed">
              {feature.description}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- Call to action -->
    <div class="mt-16 text-center">
      <a href="/services" class="inline-flex items-center text-sm font-medium text-umai-accent hover:text-umai-accent-dark transition-colors group">
        <span>Explore all services</span>
        <svg class="ml-2 w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </a>
    </div>
  </div>
</section>