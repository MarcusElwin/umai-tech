---
export interface Props {
  totalInvestment?: string;
  quarterlyData?: string;
  fundingRounds: Array<{
    id: string;
    company: string;
    amount: string;
    valuation?: string;
    stage: string;
    description: string;
    category: 'platforms' | 'checkout' | 'infrastructure' | 'specialized';
    date?: string;
  }>;
  marketStats?: {
    companiesTracked: string;
    categories: string;
    revenueMultiple: string;
    geographicSplit: Array<{
      region: string;
      percentage: number;
      focus: string;
    }>;
  };
}

const { 
  totalInvestment = "$8.6B", 
  quarterlyData = "Q3 2024",
  fundingRounds,
  marketStats
} = Astro.props;

const categoryColors = {
  platforms: '#8B5CF6',
  checkout: '#3B82F6', 
  infrastructure: '#10B981',
  specialized: '#F59E0B'
};
---

<div class="my-12">
  <!-- Header -->
  <div class="text-center mb-8">
    <h4 class="text-2xl font-semibold text-gray-900 dark:text-white mb-3">Agentic Commerce Investment Landscape</h4>
    <p class="text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
      Capital flows and funding rounds validating the agentic commerce transformation. Market momentum accelerating across all categories.
    </p>
    <p class="text-xs text-gray-500 dark:text-gray-500 mt-2 italic">Based on public funding announcements and market research (2024-2025)</p>
  </div>

  <!-- Key Metrics -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
    <div class="bg-gradient-to-br from-purple-50 to-purple-100 dark:from-purple-900/20 dark:to-purple-800/20 rounded-xl p-6 border border-purple-200 dark:border-purple-700">
      <div class="flex items-center justify-between">
        <div>
          <p class="text-purple-600 dark:text-purple-400 text-sm font-medium">Total Investment</p>
          <p class="text-2xl font-bold text-purple-900 dark:text-purple-100">{totalInvestment}</p>
          <p class="text-xs text-purple-600 dark:text-purple-400">{quarterlyData} GenAI</p>
        </div>
        <div class="w-12 h-12 bg-purple-500 rounded-full flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1"/>
          </svg>
        </div>
      </div>
    </div>

    {marketStats && (
      <>
        <div class="bg-gradient-to-br from-blue-50 to-blue-100 dark:from-blue-900/20 dark:to-blue-800/20 rounded-xl p-6 border border-blue-200 dark:border-blue-700">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-blue-600 dark:text-blue-400 text-sm font-medium">Companies Tracked</p>
              <p class="text-2xl font-bold text-blue-900 dark:text-blue-100">{marketStats.companiesTracked}</p>
              <p class="text-xs text-blue-600 dark:text-blue-400">{marketStats.categories} categories</p>
            </div>
            <div class="w-12 h-12 bg-blue-500 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h-5m9 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1"/>
              </svg>
            </div>
          </div>
        </div>

        <div class="bg-gradient-to-br from-green-50 to-green-100 dark:from-green-900/20 dark:to-green-800/20 rounded-xl p-6 border border-green-200 dark:border-green-700">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-green-600 dark:text-green-400 text-sm font-medium">Revenue Multiple</p>
              <p class="text-2xl font-bold text-green-900 dark:text-green-100">{marketStats.revenueMultiple}</p>
              <p class="text-xs text-green-600 dark:text-green-400">vs traditional SaaS</p>
            </div>
            <div class="w-12 h-12 bg-green-500 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
              </svg>
            </div>
          </div>
        </div>
      </>
    )}
  </div>

  <!-- Recent Funding Rounds -->
  <div class="bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 shadow-sm">
    <div class="p-6 border-b border-gray-200 dark:border-gray-700">
      <h5 class="text-lg font-semibold text-gray-900 dark:text-white">Recent Funding Rounds</h5>
      <p class="text-sm text-gray-600 dark:text-gray-400 mt-1">Major investments driving agentic commerce development</p>
    </div>
    
    <div class="overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead class="bg-gray-50 dark:bg-gray-700/50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Company</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Stage</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Amount</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Valuation</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider">Focus</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200 dark:divide-gray-700">
            {fundingRounds.map((round) => (
              <tr class="hover:bg-gray-50 dark:hover:bg-gray-700/50 transition-colors">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 w-3 h-3 rounded-full mr-3" style={`background-color: ${categoryColors[round.category]}`}></div>
                    <div>
                      <div class="text-sm font-medium text-gray-900 dark:text-white">{round.company}</div>
                      <div class="text-xs text-gray-500 dark:text-gray-400">{round.description}</div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 dark:bg-gray-700 text-gray-800 dark:text-gray-200">
                    {round.stage}
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900 dark:text-white">
                  {round.amount}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600 dark:text-gray-400">
                  {round.valuation || 'â€”'}
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex px-2 py-1 text-xs font-medium rounded-full" 
                        style={`background-color: ${categoryColors[round.category]}20; color: ${categoryColors[round.category]}`}>
                    {round.category}
                  </span>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Geographic Distribution -->
  {marketStats && marketStats.geographicSplit && (
    <div class="mt-8 bg-white dark:bg-gray-800 rounded-2xl border border-gray-200 dark:border-gray-700 shadow-sm p-6">
      <h5 class="text-lg font-semibold text-gray-900 dark:text-white mb-4">Geographic Investment Distribution</h5>
      <div class="space-y-4">
        {marketStats.geographicSplit.map((region) => (
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-3">
              <div class="w-4 h-4 bg-gradient-to-r from-purple-500 to-blue-500 rounded-full"></div>
              <div>
                <span class="text-sm font-medium text-gray-900 dark:text-white">{region.region}</span>
                <p class="text-xs text-gray-500 dark:text-gray-400">{region.focus}</p>
              </div>
            </div>
            <div class="flex items-center space-x-4">
              <div class="w-32 bg-gray-200 dark:bg-gray-700 rounded-full h-2">
                <div class="bg-gradient-to-r from-purple-500 to-blue-500 h-2 rounded-full transition-all duration-500"
                     style={`width: ${region.percentage}%`}></div>
              </div>
              <span class="text-sm font-medium text-gray-900 dark:text-white w-12 text-right">{region.percentage}%</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  )}
</div>

<style>
  .investment-dashboard {
    /* Additional custom styles if needed */
  }
</style>