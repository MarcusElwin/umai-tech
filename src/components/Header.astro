---
const navItems = [
  { name: 'Blog', href: '/blog' },
  { name: 'Projects', href: '/projects' },
  { name: 'Products', href: '/products' },
  { name: 'Services', href: '/services' },
  { name: 'About', href: '/about' },
  { name: 'Contact', href: '/contact' },
];
---

<header class="fixed top-0 w-full bg-white/80 dark:bg-umai-primary/80 backdrop-blur-md z-50 border-b border-umai-gray-200 dark:border-umai-gray-800">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3 group" aria-label="Umai Tech - Home">
        <div class="relative w-10 h-10 bg-umai-accent rounded-xl flex items-center justify-center group-hover:bg-umai-accent-dark transition-colors overflow-hidden">
          <!-- Lightning Bolt -->
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="absolute animate-logo-swap" aria-hidden="true" tabindex="-1">
            <path d="M13 2L3 14H12L11 22L21 10H12L13 2Z" fill="white" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="animate-lightning"/>
          </svg>
          
          <!-- AI Robot Icon -->
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="absolute animate-logo-swap-alt" aria-hidden="true" tabindex="-1">
            <rect x="7" y="7" width="10" height="10" rx="2" stroke="white" stroke-width="2"/>
            <circle cx="10" cy="10" r="1" fill="white"/>
            <circle cx="14" cy="10" r="1" fill="white"/>
            <path d="M10 14H14" stroke="white" stroke-width="2" stroke-linecap="round"/>
            <path d="M12 3V7" stroke="white" stroke-width="2" stroke-linecap="round"/>
            <path d="M12 17V21" stroke="white" stroke-width="2" stroke-linecap="round"/>
            <path d="M7 12H3" stroke="white" stroke-width="2" stroke-linecap="round"/>
            <path d="M21 12H17" stroke="white" stroke-width="2" stroke-linecap="round"/>
          </svg>
        </div>
        <span class="text-xl font-light text-gray-900 dark:text-white">umai<span class="font-semibold text-umai-accent-darker">-tech</span></span>
      </a>

      <!-- Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        {navItems.map((item) => (
          <a href={item.href} class="text-sm font-medium text-gray-600 dark:text-gray-300 hover:text-umai-accent dark:hover:text-umai-accent transition-colors">
            {item.name}
          </a>
        ))}
      </div>

      <!-- Mobile menu button -->
      <button id="mobile-menu-button" class="md:hidden p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800" aria-label="Open mobile menu" aria-expanded="false">
        <svg class="w-6 h-6 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </nav>
  
  <!-- Mobile menu full-screen overlay -->
  <div id="mobile-menu" class="mobile-menu-overlay">
    <!-- Full-screen menu content -->
    <div class="mobile-menu-content">
      
      <!-- Header with balanced layout -->
      <div style="display: flex; align-items: center; justify-content: space-between; padding: 2rem 2rem 1rem 2rem;">
        <!-- Logo - Left -->
        <div>
          <div class="w-12 h-12 bg-gradient-to-br from-umai-accent via-purple-500 to-indigo-600 rounded-xl flex items-center justify-center shadow-lg shadow-umai-accent/25">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M13 2L3 14H12L11 22L21 10H12L13 2Z" fill="white" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
        </div>
        
        <!-- Brand Text - Center -->
        <div style="text-align: center; flex: 1;">
          <span class="text-2xl font-light text-gray-900 dark:text-white tracking-wide">umai<span class="font-bold text-umai-accent">-tech</span></span>
        </div>
        
        <!-- Close Button - Right -->
        <div>
          <button id="mobile-menu-close" class="relative p-3 rounded-full hover:bg-gray-100/60 dark:hover:bg-gray-800/60 transition-all duration-300 group" aria-label="Close mobile menu">
            <svg class="w-6 h-6 text-gray-500 dark:text-gray-400 group-hover:text-gray-800 dark:group-hover:text-white transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Navigation Links - Temporal Style -->
      <div class="flex-1 flex items-center justify-center px-8">
        <nav class="w-full max-w-xs">
          <div class="space-y-2">
            {navItems.map((item, index) => (
              <a 
                href={item.href}
                class="nav-item group relative block w-full text-center py-7 px-6 rounded-3xl text-2xl font-semibold text-gray-800 dark:text-gray-100 hover:text-umai-accent dark:hover:text-umai-accent transition-all duration-400 transform hover:scale-[1.01] active:scale-[0.99]"
                style={`animation-delay: ${index * 100}ms; transform: translateY(40px); opacity: 0;`}
              >
                <!-- Sophisticated hover background -->
                <div class="absolute inset-0 bg-gradient-to-r from-umai-accent/8 via-purple-500/6 to-indigo-600/8 rounded-3xl opacity-0 group-hover:opacity-100 transition-all duration-400 transform scale-90 group-hover:scale-100 shadow-lg shadow-umai-accent/5"></div>
                
                <!-- Animated border -->
                <div class="absolute inset-0 border-2 border-transparent group-hover:border-umai-accent/10 rounded-3xl transition-all duration-400"></div>
                
                <!-- Content with better spacing -->
                <div class="relative">
                  <span class="tracking-tight font-medium">{item.name}</span>
                </div>
                
                <!-- Subtle bottom accent line -->
                <div class="absolute bottom-2 left-1/2 transform -translate-x-1/2 w-0 h-0.5 bg-gradient-to-r from-umai-accent to-purple-500 group-hover:w-12 transition-all duration-500 rounded-full"></div>
              </a>
            ))}
          </div>
        </nav>
      </div>

      <!-- Enhanced Footer with Grid Layout -->
      <div class="px-8 py-10">
        <div class="grid grid-cols-1 gap-6 text-center">
          <!-- Tagline Section -->
          <div class="space-y-2">
            <div class="text-base font-medium text-gray-600 dark:text-gray-300 tracking-wide">
              AI Consulting & Strategic Advisory
            </div>
            <div class="text-sm text-gray-500 dark:text-gray-500">
              Building the future of intelligent commerce
            </div>
          </div>
          
          <!-- Brand Badge -->
          <div class="flex justify-center">
            <div class="inline-flex items-center px-8 py-4 rounded-full bg-gradient-to-r from-umai-accent/15 via-purple-500/10 to-indigo-600/15 border border-umai-accent/25 backdrop-blur-sm shadow-lg shadow-umai-accent/10">
              <div class="w-2.5 h-2.5 bg-gradient-to-r from-umai-accent to-purple-500 rounded-full animate-pulse mr-4"></div>
              <span class="text-base font-semibold text-umai-accent tracking-wide">umai-tech.com</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu functionality
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenuClose = document.getElementById('mobile-menu-close');
  const mobileMenu = document.getElementById('mobile-menu');
  
  function openMobileMenu() {
    console.log('Opening mobile menu...');
    
    if (mobileMenu) {
      // Show menu with new CSS approach
      mobileMenu.classList.add('show');
      
      mobileMenuButton?.setAttribute('aria-expanded', 'true');
      document.body.style.overflow = 'hidden';
      
      // Animate navigation items
      setTimeout(() => {
        const navItems = mobileMenu.querySelectorAll('nav a');
        navItems.forEach((item, index) => {
          setTimeout(() => {
            (item as HTMLElement).style.transform = 'translateY(0px)';
            (item as HTMLElement).style.opacity = '1';
          }, index * 100);
        });
      }, 50);
    }
  }
  
  function closeMobileMenu() {
    if (mobileMenu) {
      mobileMenu.classList.remove('show');
      mobileMenuButton?.setAttribute('aria-expanded', 'false');
      document.body.style.overflow = '';
      
      // Reset navigation items
      const navItems = mobileMenu.querySelectorAll('nav a');
      navItems.forEach((item) => {
        (item as HTMLElement).style.transform = 'translateY(20px)';
        (item as HTMLElement).style.opacity = '0';
      });
    }
  }
  
  mobileMenuButton?.addEventListener('click', openMobileMenu);
  mobileMenuClose?.addEventListener('click', closeMobileMenu);
  
  // Close menu on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && mobileMenu?.classList.contains('show')) {
      closeMobileMenu();
    }
  });
</script>

<style>
  .mobile-menu-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 50;
    background: linear-gradient(135deg, #ffffff 0%, #f9fafb 50%, #f3f4f6 100%);
    display: none;
    opacity: 0;
    transition: all 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
    backdrop-filter: blur(20px);
  }
  
  .mobile-menu-overlay.show {
    display: block;
    opacity: 1;
  }
  
  .mobile-menu-content {
    display: flex;
    flex-direction: column;
    height: 100vh;
    width: 100vw;
    background: inherit;
    position: relative;
    overflow: hidden;
  }
  
  /* Subtle background pattern */
  .mobile-menu-content::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: radial-gradient(circle at 25% 25%, rgba(139, 92, 246, 0.03) 0%, transparent 50%),
                      radial-gradient(circle at 75% 75%, rgba(99, 102, 241, 0.03) 0%, transparent 50%);
    pointer-events: none;
  }
  
  /* Navigation item enhancements */
  .nav-item {
    position: relative;
    overflow: hidden;
  }
  
  .nav-item::before {
    content: "";
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(139, 92, 246, 0.1), transparent);
    transition: left 0.6s ease;
  }
  
  .nav-item:hover::before {
    left: 100%;
  }
  
  /* Dark mode */
  :global(.dark) .mobile-menu-overlay {
    background: linear-gradient(135deg, #111827 0%, #0f172a 100%);
  }
  
  :global(.dark) .mobile-menu-content::before {
    background-image: radial-gradient(circle at 25% 25%, rgba(139, 92, 246, 0.08) 0%, transparent 50%),
                      radial-gradient(circle at 75% 75%, rgba(99, 102, 241, 0.06) 0%, transparent 50%);
  }
  
  /* Enhanced animations */
  @keyframes slideInUp {
    from {
      transform: translateY(30px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }
  
  @keyframes fadeInScale {
    from {
      transform: scale(0.9);
      opacity: 0;
    }
    to {
      transform: scale(1);
      opacity: 1;
    }
  }
  
  /* Hide on desktop */
  @media (min-width: 768px) {
    .mobile-menu-overlay {
      display: none !important;
    }
  }
  
  /* Touch-friendly spacing on very small screens */
  @media (max-height: 640px) {
    .nav-item {
      padding-top: 1rem;
      padding-bottom: 1rem;
    }
    
    .mobile-menu-content > div:first-child {
      padding-top: 1rem;
      padding-bottom: 1rem;
    }
    
    .mobile-menu-content > div:last-child {
      padding-top: 1.5rem;
      padding-bottom: 1.5rem;
    }
  }
</style>