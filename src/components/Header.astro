---
const navItems = [
  { name: 'Blog', href: '/blog' },
  { name: 'Projects', href: '/projects' },
  { name: 'Products', href: '/products' },
  { name: 'Services', href: '/services' },
  { name: 'About', href: '/about' },
  { name: 'Contact', href: '/contact' },
];
---

<header class="fixed top-0 w-full bg-white/80 dark:bg-umai-primary/80 backdrop-blur-md z-50 border-b border-umai-gray-200 dark:border-umai-gray-800">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-3 group" aria-label="Umai Tech - Home">
        <div class="relative w-10 h-10 bg-umai-accent rounded-xl flex items-center justify-center group-hover:bg-umai-accent-dark transition-colors overflow-hidden">
          <!-- Lightning Bolt -->
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="absolute animate-logo-swap" aria-hidden="true" tabindex="-1">
            <path d="M13 2L3 14H12L11 22L21 10H12L13 2Z" fill="white" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="animate-lightning"/>
          </svg>
          
          <!-- AI Robot Icon -->
          <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg" class="absolute animate-logo-swap-alt" aria-hidden="true" tabindex="-1">
            <rect x="7" y="7" width="10" height="10" rx="2" stroke="white" stroke-width="2"/>
            <circle cx="10" cy="10" r="1" fill="white"/>
            <circle cx="14" cy="10" r="1" fill="white"/>
            <path d="M10 14H14" stroke="white" stroke-width="2" stroke-linecap="round"/>
            <path d="M12 3V7" stroke="white" stroke-width="2" stroke-linecap="round"/>
            <path d="M12 17V21" stroke="white" stroke-width="2" stroke-linecap="round"/>
            <path d="M7 12H3" stroke="white" stroke-width="2" stroke-linecap="round"/>
            <path d="M21 12H17" stroke="white" stroke-width="2" stroke-linecap="round"/>
          </svg>
        </div>
        <span class="text-xl font-light text-gray-900 dark:text-white">umai<span class="font-semibold text-umai-accent-darker">-tech</span></span>
      </a>

      <!-- Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        {navItems.map((item) => (
          <a href={item.href} class="text-sm font-medium text-gray-600 dark:text-gray-300 hover:text-umai-accent dark:hover:text-umai-accent transition-colors">
            {item.name}
          </a>
        ))}
      </div>

      <!-- Mobile menu button -->
      <button id="mobile-menu-button" class="md:hidden p-2 rounded-lg hover:bg-gray-100 dark:hover:bg-gray-800" aria-label="Open mobile menu" aria-expanded="false">
        <svg class="w-6 h-6 text-gray-600 dark:text-gray-300" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
    </div>
  </nav>
  
  <!-- Mobile menu overlay -->
  <div id="mobile-menu-overlay" class="fixed inset-0 bg-gradient-to-br from-black/60 to-black/40 backdrop-blur-md z-40 hidden md:hidden transition-all duration-300 ease-out"></div>
  
  <!-- Mobile menu sidebar -->
  <div id="mobile-menu" class="fixed right-0 top-0 h-full w-80 bg-gradient-to-br from-white via-white to-gray-50/80 dark:from-gray-900 dark:via-gray-900 dark:to-gray-800/90 backdrop-blur-xl shadow-2xl border-l border-gray-200/50 dark:border-gray-700/50 z-50 transform translate-x-full transition-all duration-300 ease-out md:hidden">
    
    <!-- Header with brand accent -->
    <div class="relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-r from-umai-accent/10 to-purple-600/5"></div>
      <div class="relative flex items-center justify-between p-6 border-b border-gray-200/60 dark:border-gray-700/60">
        <div class="flex items-center space-x-3">
          <div class="w-8 h-8 bg-gradient-to-br from-umai-accent to-purple-600 rounded-lg flex items-center justify-center">
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
              <path d="M13 2L3 14H12L11 22L21 10H12L13 2Z" fill="white" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </div>
          <span class="text-lg font-semibold text-gray-900 dark:text-white">Navigation</span>
        </div>
        <button id="mobile-menu-close" class="p-2 rounded-xl hover:bg-gray-100/80 dark:hover:bg-gray-800/80 transition-all duration-200 group" aria-label="Close mobile menu">
          <svg class="w-5 h-5 text-gray-500 dark:text-gray-400 group-hover:text-gray-700 dark:group-hover:text-gray-200 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Navigation Links -->
    <nav class="p-6 space-y-2">
      {navItems.map((item, index) => (
        <a 
          href={item.href} 
          class="group flex items-center px-4 py-4 rounded-xl text-base font-medium text-gray-700 dark:text-gray-300 hover:bg-gradient-to-r hover:from-umai-accent/10 hover:to-purple-600/5 hover:text-umai-accent dark:hover:text-umai-accent transition-all duration-200 border border-transparent hover:border-umai-accent/20"
          style={`animation-delay: ${index * 50}ms`}
        >
          <div class="flex items-center space-x-3 w-full">
            <div class="w-2 h-2 rounded-full bg-gradient-to-r from-umai-accent to-purple-600 opacity-0 group-hover:opacity-100 transition-opacity duration-200"></div>
            <span class="flex-1">{item.name}</span>
            <svg class="w-4 h-4 opacity-0 group-hover:opacity-60 transform translate-x-0 group-hover:translate-x-1 transition-all duration-200" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
        </a>
      ))}
    </nav>

    <!-- Footer decoration -->
    <div class="absolute bottom-0 left-0 right-0 h-32 bg-gradient-to-t from-umai-accent/5 to-transparent pointer-events-none"></div>
    <div class="absolute bottom-6 left-6 right-6">
      <div class="text-center">
        <div class="inline-flex items-center px-3 py-2 rounded-full bg-umai-accent/10 border border-umai-accent/20">
          <div class="w-2 h-2 bg-umai-accent rounded-full animate-pulse mr-2"></div>
          <span class="text-xs font-medium text-umai-accent">umai-tech</span>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu functionality
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenuClose = document.getElementById('mobile-menu-close');
  const mobileMenu = document.getElementById('mobile-menu');
  const mobileMenuOverlay = document.getElementById('mobile-menu-overlay');
  
  function openMobileMenu() {
    mobileMenu?.classList.remove('translate-x-full');
    mobileMenuOverlay?.classList.remove('hidden');
    mobileMenuButton?.setAttribute('aria-expanded', 'true');
    document.body.style.overflow = 'hidden';
  }
  
  function closeMobileMenu() {
    mobileMenu?.classList.add('translate-x-full');
    mobileMenuOverlay?.classList.add('hidden');
    mobileMenuButton?.setAttribute('aria-expanded', 'false');
    document.body.style.overflow = '';
  }
  
  mobileMenuButton?.addEventListener('click', openMobileMenu);
  mobileMenuClose?.addEventListener('click', closeMobileMenu);
  mobileMenuOverlay?.addEventListener('click', closeMobileMenu);
  
  // Close menu on escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && !mobileMenu?.classList.contains('translate-x-full')) {
      closeMobileMenu();
    }
  });
</script>