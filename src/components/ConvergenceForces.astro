---
export interface Props {
  forces: Array<{
    title: string;
    icon: string;
    description: string;
    keyPoints: Array<{
      point: string;
      detail: string;
      footnote?: string;
    }>;
    color: string;
  }>;
}

const { forces } = Astro.props;

function getIcon(iconName: string) {
  const icons = {
    infrastructure: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
    </svg>`,
    technical: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
    </svg>`,
    market: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
    </svg>`,
    startup: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8" />
    </svg>`
  };
  return icons[iconName as keyof typeof icons] || icons.infrastructure;
}

function getColorClasses(color: string) {
  const colors = {
    blue: {
      bg: 'from-blue-500/10 to-blue-600/10',
      border: 'border-blue-200 dark:border-blue-800',
      icon: 'text-blue-600 dark:text-blue-400',
      accent: 'bg-blue-500'
    },
    green: {
      bg: 'from-green-500/10 to-green-600/10',
      border: 'border-green-200 dark:border-green-800',
      icon: 'text-green-600 dark:text-green-400',
      accent: 'bg-green-500'
    },
    purple: {
      bg: 'from-purple-500/10 to-purple-600/10',
      border: 'border-purple-200 dark:border-purple-800',
      icon: 'text-purple-600 dark:text-purple-400',
      accent: 'bg-purple-500'
    },
    orange: {
      bg: 'from-orange-500/10 to-orange-600/10',
      border: 'border-orange-200 dark:border-orange-800',
      icon: 'text-orange-600 dark:text-orange-400',
      accent: 'bg-orange-500'
    }
  };
  return colors[color as keyof typeof colors] || colors.blue;
}
---

<div class="my-12">
  <!-- Header -->
  <div class="text-center mb-8">
    <h4 class="text-2xl font-semibold text-gray-900 dark:text-white mb-3">The Perfect Storm: Three Converging Forces</h4>
    <p class="text-gray-600 dark:text-gray-400 max-w-3xl mx-auto">
      The emergence of agentic commerce isn't happening in isolation—it's the result of three megatrends reaching critical mass simultaneously.
    </p>
  </div>

  <!-- Forces Grid -->
  <div class="grid md:grid-cols-3 gap-6">
    {forces.map((force) => {
      const colorClasses = getColorClasses(force.color);
      return (
        <div class={`relative bg-gradient-to-br ${colorClasses.bg} border ${colorClasses.border} rounded-2xl p-6 hover:shadow-lg transition-all duration-300 group`}>
          <!-- Header -->
          <div class="flex items-start space-x-4 mb-6">
            <div class={`${colorClasses.icon} p-3 bg-white dark:bg-gray-800 rounded-xl shadow-sm group-hover:shadow-md transition-shadow`} set:html={getIcon(force.icon)} />
            <div class="flex-1">
              <h5 class="text-lg font-semibold text-gray-900 dark:text-white mb-2">{force.title}</h5>
              <p class="text-sm text-gray-600 dark:text-gray-400 leading-relaxed">{force.description}</p>
            </div>
          </div>

          <!-- Key Points -->
          <div class="space-y-4">
            {force.keyPoints.map((item) => (
              <div class="flex items-start space-x-3">
                <div class={`w-2 h-2 rounded-full ${colorClasses.accent} mt-2 flex-shrink-0`}></div>
                <div>
                  <div class="text-sm font-medium text-gray-900 dark:text-white mb-1">
                    {item.point}{item.footnote && <sup><a href={`#user-content-fn-${item.footnote}`} class="text-umai-accent font-medium hover:text-umai-accent/80 transition-colors" data-footnote-ref aria-describedby="footnote-label">{item.footnote}</a></sup>}
                  </div>
                  <div class="text-xs text-gray-600 dark:text-gray-400 leading-relaxed">{item.detail}</div>
                </div>
              </div>
            ))}
          </div>

          <!-- Subtle gradient overlay on hover -->
          <div class="absolute inset-0 bg-gradient-to-br from-white/0 to-white/0 group-hover:from-white/5 group-hover:to-white/10 dark:group-hover:from-white/5 dark:group-hover:to-white/10 rounded-2xl transition-all duration-300 pointer-events-none"></div>
        </div>
      );
    })}
  </div>

  <!-- Bottom Quote -->
  <div class="mt-8 p-6 bg-gradient-to-r from-umai-gray-50 to-white dark:from-umai-gray-800 dark:to-umai-gray-700 rounded-xl border border-umai-gray-200 dark:border-umai-gray-600">
    <blockquote class="text-center">
      <p class="text-gray-700 dark:text-gray-300 italic mb-3">
        "The technology to build powerful agents is already here… the opportunity now is to redeploy AI at the core of how value is created."
      </p>
      <cite class="text-sm font-medium text-umai-accent">— McKinsey Global Institute</cite>
    </blockquote>
  </div>
</div>