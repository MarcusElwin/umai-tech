---
export interface Props {
  title?: string;
  type?: 'default' | 'numbered' | 'featured';
}

const { title } = Astro.props;
---

<div class="my-8 rounded-xl border border-gray-200/60 bg-gradient-to-br from-gray-50/80 to-white/90 dark:from-gray-900/50 dark:to-gray-800/30 dark:border-gray-700/40 shadow-sm backdrop-blur-sm">
  {title && (
    <div class="px-6 py-4 border-b border-gray-200/60 dark:border-gray-700/40">
      <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200 flex items-center gap-2">
        <div class="w-1 h-5 bg-purple-500 rounded-full"></div>
        {title}
      </h3>
    </div>
  )}
  
  <div class="p-6">
    <div class="space-y-6">
      <slot />
    </div>
  </div>
</div>

<style>
  /* Custom styling for list items within PrettyList */
  :global(.pretty-list-item) {
    @apply flex items-start gap-4 p-4 rounded-lg bg-white/50 dark:bg-gray-800/30 border border-gray-200/40 dark:border-gray-700/30 transition-all hover:shadow-md hover:border-purple-300/60 dark:hover:border-purple-600/40;
  }
  
  :global(.pretty-list-icon) {
    @apply flex-shrink-0 w-10 h-10 rounded-full bg-gradient-to-br from-purple-500 to-purple-600 dark:from-purple-400 dark:to-purple-500 flex items-center justify-center text-white shadow-sm;
  }
  
  :global(.pretty-list-icon svg) {
    @apply w-5 h-5;
  }
  
  :global(.pretty-list-content) {
    @apply flex-1 min-w-0;
  }
  
  :global(.pretty-list-title) {
    @apply font-semibold text-gray-900 dark:text-gray-100 mb-2 text-lg;
  }
  
  :global(.pretty-list-description) {
    @apply text-gray-700 dark:text-gray-300 leading-relaxed;
  }
</style>