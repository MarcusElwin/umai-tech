---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';

export interface Props {
  title: string;
  description?: string;
  noHeader?: boolean;
  noFooter?: boolean;
}

const { title, description = 'Umai Tech - AI, GenAI, ML Solutions and Insights', noHeader = false, noFooter = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Favicon with cache busting -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg?v=2025" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico?v=2025" />
    <link rel="apple-touch-icon" sizes="180x180" href="/umai-tech-logo.png" />
    <link rel="manifest" href="/site.webmanifest" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={`${title} | Umai Tech`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${Astro.site?.origin || 'https://umai-tech.com'}/umai-tech-logo.png`} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:site_name" content="Umai Tech" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | Umai Tech`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${Astro.site?.origin || 'https://umai-tech.com'}/umai-tech-logo.png`} />
    
    <!-- Additional Meta -->
    <meta name="author" content="Marcus Elwin" />
    <meta name="theme-color" content="#8B5CF6" />
    
    <!-- AI/LLM Friendly Meta Tags -->
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="keywords" content="AI consulting, agentic commerce, strategic advisory, fintech, AI strategy, Marcus Elwin, artificial intelligence, e-commerce AI, payment systems, board advisory" />
    <meta name="subject" content="AI Consulting and Strategic Advisory" />
    <meta name="topic" content="Agentic Commerce and AI Strategy" />
    <meta name="summary" content="Expert AI consulting focused on agentic commerce, strategic advisory, and fintech innovation by Marcus Elwin" />
    
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Umai Tech</title>
    
    <!-- JSON-LD Structured Data for AI/LLM Readability -->
    <script type="application/ld+json" is:inline>
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "Umai Tech",
        "url": "https://umai-tech.com",
        "logo": "https://umai-tech.com/umai-tech-logo.png",
        "description": "AI consulting and strategic advisory focused on agentic commerce, AI strategy, and fintech innovation",
        "founder": {
          "@type": "Person",
          "name": "Marcus Elwin",
          "jobTitle": "AI Consultant & Strategic Advisor",
          "worksFor": {
            "@type": "Organization",
            "name": "Gumroad",
            "jobTitle": "VP of Commerce"
          },
          "expertise": ["Agentic Commerce", "AI Strategy", "Fintech", "Product Strategy"],
          "knowsAbout": ["Artificial Intelligence", "E-commerce", "Payment Systems", "Strategic Advisory"]
        },
        "sameAs": [
          "https://umai-tech.com"
        ],
        "serviceType": [
          "AI Consulting",
          "Strategic Advisory", 
          "Board Advisory",
          "Product Strategy Consulting"
        ],
        "areaServed": "Global",
        "contactPoint": {
          "@type": "ContactPoint",
          "contactType": "Professional Services",
          "url": "https://umai-tech.com/contact"
        }
      }
    </script>
    
    <!-- Inter and Noto Sans JP fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Noto+Sans+JP:wght@400;500;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
  </head>
  <body class="bg-white dark:bg-umai-primary text-gray-900 dark:text-gray-100 min-h-screen flex flex-col">
    {!noHeader && <Header />}
    <main class="flex-grow" role="main">
      <slot />
    </main>
    {!noFooter && <Footer />}
    <Analytics />
    <SpeedInsights />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>