---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Analytics from '@vercel/analytics/astro';
import SpeedInsights from '@vercel/speed-insights/astro';

export interface Props {
  title: string;
  description?: string;
  noHeader?: boolean;
  noFooter?: boolean;
}

const { title, description = 'Umai Tech - AI, GenAI, ML Solutions and Insights', noHeader = false, noFooter = false } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="apple-touch-icon" sizes="180x180" href="/umai-tech-logo.png" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={`${title} | Umai Tech`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${Astro.site?.origin || 'https://umai-tech.com'}/umai-tech-logo.png`} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:site_name" content="Umai Tech" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | Umai Tech`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${Astro.site?.origin || 'https://umai-tech.com'}/umai-tech-logo.png`} />
    
    <!-- Additional Meta -->
    <meta name="author" content="Marcus Elwin" />
    <meta name="theme-color" content="#8B5CF6" />
    
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Umai Tech</title>
    
    <!-- Inter and Noto Sans JP fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Noto+Sans+JP:wght@400;500;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
  </head>
  <body class="bg-white dark:bg-umai-primary text-gray-900 dark:text-gray-100 min-h-screen flex flex-col">
    {!noHeader && <Header />}
    <main class="flex-grow">
      <slot />
    </main>
    {!noFooter && <Footer />}
    <Analytics />
    <SpeedInsights />
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>